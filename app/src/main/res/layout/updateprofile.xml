<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ActionBarThemeOverlay"
            app:popupTheme="@style/ActionBarPopupThemeOverlay"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_toolbar"
            android:paddingBottom="30dp"
            android:id="@+id/head"
            android:background="#49b102">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif"
                android:text="Update Profile"
                android:textAllCaps="true"
                android:id="@+id/nameofseller"
                android:textColor="#fff"
                android:background="#49b102"
                android:textSize="40sp"

                />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Profile Details"
            android:layout_below="@+id/head"
            android:id="@+id/headlabel"
            android:textColor="#888988"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:padding="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headlabel"
            android:padding="5dp"
            android:id="@+id/namebar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profile"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name of user"
                    android:id="@+id/namelabel"
                    android:textColor="#000"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:id="@+id/name"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#000"
                    android:layout_below="@+id/namelabel"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namebar"
            android:padding="5dp"
            android:id="@+id/phonebar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/phone"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cotact number of user"
                    android:id="@+id/phonelabel"
                    android:textColor="#000"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9999001122"
                    android:layout_below="@+id/phonelabel"
                    android:id="@+id/phone"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Address"
            android:gravity="center"
            android:textColorHint="#000"
            android:id="@+id/address"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_below="@+id/textView"
            android:background="@drawable/formfieldrectangle"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_below="@+id/phonebar"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="You can change your address below"
                android:textColor="#0786b1"
                android:gravity="center"

                android:background="@drawable/infotextviewborder"
                android:padding="10dp"
                android:layout_marginTop="18dp"

                /></LinearLayout>

        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:padding="10dp"
            android:textColor="#fff"
            android:background="@drawable/proceedbutton"
            android:layout_marginTop="16dp"
            android:id="@+id/btnconfirm"
            android:text="Confirm"
            android:layout_below="@+id/address"
            android:layout_marginBottom="70dp"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</ScrollView>

