<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ActionBarThemeOverlay"
            app:popupTheme="@style/ActionBarPopupThemeOverlay"/>



        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchpath"
            android:background="#49b102"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingLeft="13dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test category"
                android:visibility="gone"
                android:id="@+id/categoryname"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:text=" > "
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_toolbar"
                android:text="test subcategory"
                android:visibility="gone"
                android:id="@+id/subcategoryname"
                android:textColor="#fff"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_toolbar"
            android:id="@+id/head">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Test Seller"
                android:textAllCaps="true"
                android:id="@+id/nameofseller"
                android:textColor="#fff"
                android:background="#49b102"
                android:textSize="40dp"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameofseller"
                android:gravity="center_horizontal"
                android:background="#49b102"
                android:paddingBottom="37dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of successful orders : "
                    android:textColor="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/quoterating"
                    android:textColor="#fff"

                    /></LinearLayout>
        </RelativeLayout>
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="20dp"
            android:text="test phone"
            android:id="@+id/phoneofseller"
            android:textColor="#000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:padding="5dp"
            android:id="@+id/descbar"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/description"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description of the product"
                    android:id="@+id/descriptionlabel"
                    android:textColor="#000"
                    android:paddingLeft="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a test description of the product to be displayed by this quotation"
                    android:id="@+id/description"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#000"
                    android:layout_below="@+id/descriptionlabel"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descbar"
            android:padding="5dp"
            android:id="@+id/pricebar"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/price"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current highest bid of the product"
                    android:id="@+id/pricelabel"
                    android:textColor="#000"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 250"
                    android:layout_below="@+id/pricelabel"
                    android:id="@+id/currentbid"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pricebar"
            android:padding="5dp"
            android:id="@+id/quantitybar"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/quantity"
                android:layout_gravity="center_vertical"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Present avaliable quantity (in kg.)"
                    android:id="@+id/quantitylabel"
                    android:textColor="#000"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quantitylabel"
                    android:text="5"
                    android:id="@+id/availablequantity"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#000"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="If you are interested in this product, enter the details below"
            android:textColor="#0786b1"
            android:gravity="center"
            android:layout_below="@+id/quantitybar"
            android:id="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/infotextviewborder"
            android:padding="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How much are you willing to pay?"
            android:gravity="center"
            android:textColorHint="#6b6b6b"
            android:id="@+id/price"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:layout_below="@+id/textView"
            android:background="@drawable/formfieldrectangle"
            android:textSize="14dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How much quantity will you purchase?"
            android:gravity="center"
            android:textColorHint="#6b6b6b"
            android:id="@+id/quantity"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/price"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:padding="5dp"
            android:background="@drawable/formfieldrectangle"
            android:textSize="14dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/quantity"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iminterested"
                android:text="I'M INTERESTED"
                android:padding="5dp"
                android:textColor="#fff"
                android:id="@+id/interested"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>