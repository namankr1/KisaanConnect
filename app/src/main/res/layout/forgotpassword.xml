<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#49b102"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <ImageView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/messagef"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/my_toolbar"
            android:layout_marginTop="50dp"
            android:id="@+id/logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Enter recieved OTP and new password"
            android:background="#b0ffffff"
            android:textStyle="bold"
            android:textColor="#58b515"
            android:gravity="center"
            android:layout_below="@+id/logo"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:padding="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="OTP"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/otp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="New Password"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/oldpassword"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textStyle="bold"
            android:textColor="#49b102"
            android:background="#ffffff"
            android:id="@+id/verify"
            android:layout_below="@+id/oldpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#49b102"
            android:id="@+id/resend"
            android:layout_below="@+id/verify"
            android:layout_alignRight="@+id/verify"
            android:layout_alignEnd="@+id/verify"
            android:layout_marginTop="25dp" />

    </RelativeLayout>
</ScrollView>